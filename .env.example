# Required
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
OPENAI_API_KEY=your_openai_api_key
OPENAI_STT_MODEL=whisper-1
OPENAI_PARSER_MODEL=gpt-4o-mini
CLOCKIFY_WORKSPACE_ID=your_clockify_workspace_id
CLOCKIFY_API_KEY=your_fallback_clockify_api_key
CLOCKIFY_BASE_URL=https://api.clockify.me/api/v1

# Users allow-list (pick one option)
USERS_DATA_PATH=./data/users.json
# USERS_JSON={"users":[{"tgId":"123456789","clockifyEmail":"user@company.com","clockifyApiKey":"clockify_personal_api_key","active":true}]}
USERS_JSON=

# Bot behavior
BASE_TZ=Europe/Belgrade
PENDING_TTL_MS=900000
ECHO_TRANSCRIPTION=false
DEBUG_BOT_FLOW=false
DEBUG_PROJECT_TOP=5
REPORT_OWNER_TG_ID=376957179
# On Vercel default should be false; local can stay true.
INTERACTIVE_SELECTION=true

# Activity tracking
# file  -> writes ./data/*.json, ./data/*.csv and ./index.html (best for local)
# memory -> no file writes (recommended for Vercel)
ACTIVITY_STORAGE=file
ACTIVITY_DATA_PATH=./data/activity.json
ACTIVITY_TABLE_PATH=./data/activity.csv
ACTIVITY_DASHBOARD_PATH=./index.html

# Local run only
PORT=3010
TELEGRAM_WEBHOOK_URL=https://your-public-host.example.com
TUNNEL_PROVIDER=ngrok
TUNNEL_SUBDOMAIN=
DELETE_WEBHOOK_ON_EXIT=false
TUNNEL_RECONNECT_DELAY_MS=5000
NGROK_AUTHTOKEN=
NGROK_REGION=
NGROK_DOMAIN=
NGROK_API_ADDR=127.0.0.1
NGROK_API_PORT=4040
